<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp"
    android:fitsSystemWindows="true"
   >
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="132dp"
        android:id="@+id/login_prompt_password"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:singleLine="true"
            android:id="@+id/password"
            android:inputType="textPassword"
            android:fitsSystemWindows="true"
            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invalid_id_code"
        android:layout_below="@+id/login_prompt_password"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        android:textColor="#d72312"
        android:layout_centerHorizontal="true"
        android:id="@+id/invalid_name_password"
        android:fitsSystemWindows="true"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/login_button"
        android:text="@string/login"
        android:layout_below="@+id/invalid_name_password"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        />
</RelativeLayout>
